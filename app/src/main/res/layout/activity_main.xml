<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.homechart.app.swiperecyclerview.activity.MainActivity">

    <!--app:cardCornerRadius=" "圆角的半径，效果就是上面四个角的弧度-->
    <!--app:cardElevation=" "阴影大小-->

    <android.support.v7.widget.CardView
        android:id="@+id/cv_one"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">


        <TextView
            android:id="@+id/tv_page_flush"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="只有刷新" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_two"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cv_one"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <TextView
            android:id="@+id/tv_multi_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="多布局的刷新加载" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_three"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/cv_two"
        app:cardCornerRadius="12dp"
        app:cardElevation="12dp">

        <TextView
            android:id="@+id/tv_single_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="单布局的刷新加载" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
